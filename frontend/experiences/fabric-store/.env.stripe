# Stripe Configuration for Fabric Store
# Add these to your Vercel environment variables

# Required for frontend (client-side)
# Get from: https://dashboard.stripe.com/apikeys (starts with pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY_HERE

# Required for backend (server-side)
# Get from: https://dashboard.stripe.com/apikeys (starts with sk_)
STRIPE_API_KEY=sk_live_YOUR_SECRET_KEY_HERE

# Required for webhooks (optional but recommended)
# Get from: https://dashboard.stripe.com/webhooks after creating an endpoint
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Medusa Backend Configuration (already set)
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://medusa-backend-production-3655.up.railway.app
MEDUSA_BACKEND_URL=https://medusa-backend-production-3655.up.railway.app

