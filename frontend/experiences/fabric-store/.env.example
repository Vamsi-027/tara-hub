# ============================================
# Fabric Store Experience App Configuration
# Copy this file to .env.local for development
# ============================================

# Environment
NODE_ENV=development

# ============================================
# Medusa Backend Configuration
# ============================================
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=your_medusa_publishable_key
MEDUSA_BACKEND_URL=http://localhost:9000

# ============================================
# Stripe Payment Processing (Test Mode)
# ============================================
# Only the publishable key should be used in frontend
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# SECURITY: Never put STRIPE_SECRET_KEY in frontend code!
# The secret key should only exist in the Medusa backend

# ============================================
# API URLs
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3010
NEXT_PUBLIC_BASE_URL=http://localhost:3006
NEXT_PUBLIC_APP_NAME=Fabric Store

# ============================================
# Email Service - Resend
# ============================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=Your Name <your-email@domain.com>

# ============================================
# Gmail SMTP (for fallback email)
# ============================================
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Sanity CMS Configuration
# ============================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_sanity_api_token

# ============================================
# Authentication
# ============================================
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3006

# ============================================
# Google OAuth
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# Twilio SMS Service
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Medusa Admin Access (for API calls)
# ============================================
MEDUSA_ADMIN_TOKEN=your_medusa_admin_token