{
  "name": "tara-hub-fabric-store",
  "buildCommand": "cd ../.. && npm install && cd experiences/fabric-store && npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "echo 'Skipping install - handled by buildCommand'",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Fabric Store",
    "NEXT_PUBLIC_APP_TYPE": "experience",
    "NEXT_PUBLIC_MEDUSA_BACKEND_URL": "https://medusa-backend-production-3655.up.railway.app",
    "NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY": "@medusa_publishable_key",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY": "@stripe_publishable_key",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "NEXT_PUBLIC_SANITY_PROJECT_ID": "d1t5dcup",
    "NEXT_PUBLIC_SANITY_DATASET": "production",
    "SANITY_API_TOKEN": "@sanity_api_token",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "JWT_SECRET": "@jwt_secret",
    "TWILIO_ACCOUNT_SID": "@twilio_account_sid",
    "TWILIO_AUTH_TOKEN": "@twilio_auth_token",
    "TWILIO_PHONE_NUMBER": "@twilio_phone_number",
    "RESEND_API_KEY": "@resend_api_key",
    "RESEND_FROM_EMAIL": "Tara Hub Admin <admin@deepcrm.ai>"
  },
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- experiences/fabric-store packages"
}