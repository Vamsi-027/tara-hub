    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "zod": "^3.25.76",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
