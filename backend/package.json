{
  "name": "@tara-hub/backend",
  "version": "1.0.0",
  "description": "Tara Hub Backend Services",
  "private": true,
  "scripts": {
    "dev": "turbo dev --filter=@tara-hub/backend",
    "build": "turbo build --filter=@tara-hub/backend",
