{
  "compilerOptions": {
    "target": "ES2021",
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "./.medusa/server",
    "rootDir": "./",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "strictNullChecks": false,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": false
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "**/*",
    ".medusa/types/*"
  ],
  "exclude": [
    "node_modules",
    ".medusa/server",
    ".medusa/admin",
    ".cache",
    "scripts/test-*.ts",
    "**/*test*.ts",
    "src/api/admin/contacts/**/*",
    "src/api/admin/contact/**/*",
    "src/api/admin/fabric-orders/**/*",
    "src/api/admin/sync-fabric-orders/**/*",
    "src/api/admin/users/**/*",
    "src/api/store/**/*",
    "src/scripts/import-fabric-data.ts",
    "src/scripts/cleanup-unused-images.ts",
    "src/workflows/sync-fabric-orders.ts",
    "src/admin/routes/**/*",
    "src/admin/widgets/**/*",
    "src/admin/**/*",
    "src/api/fabric-db/**/*",
    "src/api/middlewares/**/*",
    "src/api/middlewares.ts",
    "src/jobs/**/*",
    "src/loaders/**/*",
    "src/models/**/*",
    "src/modules/**/*"
  ]
}
