# ============================================
# Tara Hub - Main Admin Dashboard Environment Variables
# Copy this file to .env.local for development
# ============================================

# Environment
NODE_ENV=development

# ============================================
# Database Configuration - PostgreSQL (Neon)
# ============================================
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?sslmode=require

# ============================================
# Medusa Backend URL
# ============================================
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000

# ============================================
# Authentication
# ============================================
NEXTAUTH_SECRET=your_nextauth_secret_here

# ============================================
# Google OAuth (for Admin Dashboard)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# Email Service - Resend
# ============================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=Your Name <your-email@domain.com>