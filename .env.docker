# Docker Environment Variables
# Copy this file to .env for Docker development

# Environment
NODE_ENV=development

# PostgreSQL Database
POSTGRES_USER=medusa
POSTGRES_PASSWORD=medusa_secure_password_2024
POSTGRES_DB=medusa
DATABASE_URL=postgresql://medusa:medusa_secure_password_2024@localhost:5432/medusa

# Redis Cache
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
COOKIE_SECRET=your_cookie_secret_here_change_in_production
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production

# URLs
MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CORS
STORE_CORS=http://localhost:3000,http://localhost:3006,http://localhost:3007
ADMIN_CORS=http://localhost:3000,http://localhost:9000
AUTH_CORS=http://localhost:3000,http://localhost:9000

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=admin@tara-hub.com

# Storage (Cloudflare R2) - Optional for local dev
S3_REGION=auto
S3_BUCKET_NAME=store
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_PUBLIC_URL=https://pub-your-bucket.r2.dev

# Payment (Stripe) - Optional for local dev
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Admin Tools (Optional)
PGADMIN_EMAIL=admin@tara-hub.com
PGADMIN_PASSWORD=admin

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Vercel KV (Optional for local dev)
KV_REST_API_URL=
KV_REST_API_TOKEN=